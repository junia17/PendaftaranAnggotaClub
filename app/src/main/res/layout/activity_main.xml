<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="3dp"
    tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl4017.pendaftarananggotaclub.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl4017.pendaftarananggotaclub.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="133dp"
            android:layout_height="87dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap" />

    <EditText
        android:id="@+id/editTextNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <RadioButton
            android:id="@+id/radioButtonP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perempuan" />

        <RadioButton
            android:id="@+id/radioButtonL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Laki - Laki" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bias" />

    <Spinner
        android:id="@+id/spinnerB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/Bias" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status" />

    <CheckBox
        android:id="@+id/checkBoxB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bekerja" />

    <CheckBox
        android:id="@+id/checkBoxM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mahasiswa" />

    <CheckBox
        android:id="@+id/checkBoxD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dll" />

    <Button
        android:id="@+id/buttonDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar" />

    <TextView
        android:id="@+id/textViewHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil" />

        <TextView
        android:id="@+id/textViewHasil3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil" />

    <TextView
        android:id="@+id/textViewHasil4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewHasil5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>
</ScrollView>